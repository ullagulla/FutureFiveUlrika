<%- include("../includes/header.ejs") %>
<%- include("../includes/script.ejs") %>
<%- include("../includes/navbar.ejs") %>

<body>
    <% let randomOrderNumber = Math.floor(Math.random() * 10000) %>
    <div class="container thankyou-container">
        <div class="row d-flex justify-content-center">
            <div class="col-12 col-md-7 text-center">
                <h4 class="mt-5">Tack för att du klev in i mörkret hos oss, <%= user.firstName %>!</h4> 
                <div class="mt-3">Vi har bekräftat din order enligt nedan. Ditt ordernummer är <span
                    class="random-num"><%= randomOrderNumber %>.</span></div>
                    <div class="mt-3">Vi tar hand om dina artefakter under månens spröda sken och kommer snart att frambringa dem hos
                er.</div>
                <div class="d-flex justify-content-center mt-4">
                <% products.forEach( (product) => { %>
                    <div class="product-wrapper col-12 col-md-6">
                        <div class="product-img-wrapper">
                            <a href="/productpage/<%= product._id %>" class="specificProduct"><img
                                    src="<%= product.imageUrl %> " alt="<%= product.name %>" /></a>
                        </div>
                        <div class="product-info">
                            <div class="product-name mt-auto"> <%= product.name %>
                            </div>
                            <div class="product-price mt-auto"> <%= product.quantity %> st </div>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</body>
<%- include("../includes/footer.ejs") %>